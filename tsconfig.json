        "moduleResolution": "Node",
        "outDir": "./esm",
        "rootDir": "./src",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "lib": ["ESNext", "DOM"],
        "declaration": true
    },
    "include": ["src/**/*"]
